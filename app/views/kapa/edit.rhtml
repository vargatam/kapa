<h1>Editing product group</h1>

<% form_for @product_group, :url => {:action => :update, :id => @product_group }  do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', :action => :show, :id => @product_group %> |
<%= link_to 'Back', :action => :index %>